# Binance API Configuration
BINANCE_API_KEY=
BINANCE_SECRET_KEY=
BINANCE_TESTNET=false

# Trading Configuration
TRADING_PAIR=ADAUSDT
BASE_BALANCE=200

# Position Sizing (as percentages of balance)
ANCHOR_POSITION_SIZE=0.20
ANCHOR_HEDGE_SIZE=0.30
OPPORTUNITY_POSITION_SIZE=0.20
OPPORTUNITY_HEDGE_SIZE=0.30
SCALP_POSITION_SIZE=0.10
SCALP_HEDGE_SIZE=0.10

# Scalp Strategy Configuration
# - Scalp trades use 10% capital each (20% total risk)
# - Hedge leverage is 20% higher than scalp (18x vs 15x)
# - Hedge closes when ROI > Scalp ROI for optimal profit taking
# - Uses learned S/R levels for hedge opening triggers

# Leverage Settings
ANCHOR_LEVERAGE=10
HEDGE_LEVERAGE=25
OPPORTUNITY_LEVERAGE=10
SCALP_LEVERAGE=15
SCALP_HEDGE_LEVERAGE=25

# Technical Analysis (Relaxed for Hedged Strategy)
RSI_PERIOD=14
EMA_FAST=9
EMA_SLOW=18
VOLUME_PERIOD=20
VOLUME_MULTIPLIER=1.2  # Reduced from 1.5 to 1.2 for more opportunities

# Support/Resistance Levels for ADA (from comprehensive analysis)
# Resistance levels (LONG entry triggers)
RESISTANCE_1=0.8673
RESISTANCE_2=0.8816
RESISTANCE_3=0.8837
# Support levels (SHORT entry triggers)
SUPPORT_1=0.8602
SUPPORT_2=0.8598
SUPPORT_3=0.8389

# Historical Data (for level learning) - ENABLED for scalp strategy
HISTORICAL_4H_DAYS=180
HISTORICAL_1H_DAYS=7
HISTORICAL_15M_DAYS=1

# Dynamic Level Learning (enabled for scalp strategy)
USE_DYNAMIC_LEVELS=true

# Logging
LOG_LEVEL=info
LOG_FILE=logs/trading-bot.log
